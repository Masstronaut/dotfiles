{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "rm *": "ask",
      "rm -rf /": "deny",
      "ls": "allow",
      "git status": "allow",
      "git push": "ask",
      "git diff": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git commit *": "ask",
      "npm run *": "allow",
      "rg *": "allow",
      "grep *": "allow",
      "pwd": "allow",
      "cd *": "allow",
      "cat *": "allow",
      "tail *": "allow",
      "head *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "wc -l *": "allow",
    },
  }
}
